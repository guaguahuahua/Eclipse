			for(int j=0; j<) {
				
			}
		}
		return 0;
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int []nums= {1,2,3,4,5,6,5,4,3,2,1};
		int res=findTheAppearedOneNum(nums);
		System.out.println(res);
	}

}
