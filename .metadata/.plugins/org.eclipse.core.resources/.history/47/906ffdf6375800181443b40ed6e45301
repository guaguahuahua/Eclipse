package com.test;

import static org.junit.jupiter.api.Assertions.assertEquals;

import java.util.ArrayList;

import org.junit.jupiter.api.Test;

import com.xjtu.interview.PrintMatrix;

public class TestPrintMatrix {
	PrintMatrix print=new PrintMatrix();
	ArrayList<Integer> testRes;
	ArrayList<Integer> corRes=new ArrayList<Integer>();
	String output="result:";
	
	@Test
	void test() {
		int  [][]a=
			{
					{1,2},
					{3,4}
			};
		
		corRes.add(1);
		corRes.add(2);
		corRes.add(4);
		corRes.add(3);
		testRes=print.printMatrix(a);
		assertEquals(corRes, testRes);
	}
	
	@Test
	void test1(){
		int [][]a= 
			{
					{1}	
			};
		testRes=print.printMatrix(a);
		corRes.add(1);
		assertEquals(corRes, testRes);
	}
	
