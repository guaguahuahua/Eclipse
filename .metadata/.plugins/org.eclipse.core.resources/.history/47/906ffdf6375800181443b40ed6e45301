    	corRes.add(3);
    	corRes.add(4);
    	corRes.add(8);
    	corRes.add(12);
    	corRes.add(16);
    	corRes.add(15);
    	corRes.add(14);
    	corRes.add(13);
    	corRes.add(9);
    	corRes.add(5);
    	corRes.add(6);
    	corRes.add(7);
    	corRes.add(11);
    	corRes.add(10);
    	assertEquals(corRes, testRes);
	}
	
