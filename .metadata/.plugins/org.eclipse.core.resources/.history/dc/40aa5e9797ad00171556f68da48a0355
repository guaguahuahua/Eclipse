package com.xjtu.algorithm;

public class Test {
	
	/**
	 * 仿真实现一下边界跟踪算法的效果
	 * @param data
	 */
	public static void borderFollowing(int [][]data) {
		int i2=0,j2=0;
		int i3=0,j3=0;
		int i4=0,j4=0;
		int NBD=1;
		for(int row=0; row<data.length; row++) {
			for(int col=0; col<data[0].length; col++) {
				//算法开始条件
				if(data[row][col]!=0) {
					//进入步骤1
					//外边界开始点
					if(data[row][col]==1 && data[row][col-1]==0) {
						NBD++;
						i2=row;
						j2=col-1;
					}else if(data[row][col]>=1 && data[i][j+1]==0) {//孔边界开始点
						NBD++;
						i2=row;
						j2=col+1;
					}
					
					
					
				}				
			}
			
		}
	}
